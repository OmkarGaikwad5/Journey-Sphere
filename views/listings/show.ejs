<% layout("layouts/boilerplate") %>
<body>

  <div class="row mt-3" >
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
</div>
    <div class="card col-6 offset-3 ">
      <img src=<%= listing.image.url %> class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text"> 
         <br>
         <p class="offset-3">
          <i><b>Owned By: <%= listing.owner ? listing.owner.username : "Unknown Owner" %></b></i>
        </p>
        <p> <%= listing.description %> </p>
         <p> &#8377;<%= listing.price.toLocaleString("en-IN")%></p>
         <p><%= listing.location %> </p>
         <p><%= listing.country %></p> 
       </p>
      </div>
    </div>
   </div>
  
   <div class="btns">
    <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark edit-btn offset-3 mt-2">Edit </a>
    <form method = "post"   action="/listings/<%= listing.id %>?_method=delete">
      <button class="btn btn-dark offset-4 mt-2">Delete </button>
    </form>
   </div>
   <hr>

   <div class="col-8 offset-3">
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating :</label>
          <input  type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments :</label>
          <textarea 
          id="comment" 
          rows="5" 
          cols="15"  
          name="review[comment]" 
          class="form-control" 
          required></textarea>
          <div class="invalid-feedback">Please write your experience here</div>
      </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>

      <hr>

     <p><b>All Reviews</b></p>
      <br>
      <div class="row">
      <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3 ">
            <div class="card-body">
          <h5 class=card-title>Mayur Sharma</h5>
          <p  class="card-text"><%= review.comment %></p> 
          <p  class="card-text"><%= review.rating %> Stars</p>
        </div>
        <form action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=delete" class="mb-3 " method="post">
          <button class="btn btn-sm btn-dark mt-1">Delete</button>
        </form>
      </div>
        <% } %>
      </div>
   </div>
 
</body>
